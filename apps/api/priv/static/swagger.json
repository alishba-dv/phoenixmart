{
  "swagger": "2.0",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT auth using Bearer scheme. Example: 'Bearer <token>'"
    }
  },
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/api/users": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "View all users",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "404": {
            "description": "Bad request"
          },
          "200": {
            "schema": {
              "$ref": "#/definitions/viewusers"
            },
            "description": "Success"
          }
        },
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "type": "string",
            "required": false,
            "name": "name",
            "in": "query",
            "description": "Name to filter"
          },
          {
            "type": "string",
            "required": false,
            "name": "email",
            "in": "query",
            "description": "Email to filter"
          },
          {
            "type": "string",
            "required": false,
            "name": "role",
            "in": "query",
            "enum": [
              "1",
              "2",
              "3"
            ],
            "description": "Role to filter"
          },
          {
            "type": "string",
            "required": false,
            "name": "sort",
            "in": "query",
            "enum": [
              "Ascending",
              "Descending"
            ],
            "description": "Sort the results"
          },
          {
            "type": "string",
            "required": false,
            "name": "page",
            "in": "query",
            "description": "Page number to show"
          },
          {
            "type": "string",
            "required": false,
            "name": "page_size",
            "in": "query",
            "description": "Total Entries in a page"
          }
        ],
        "operationId": "Api.UserController.viewusers",
        "description": "View all users"
      }
    },
